[user]
	name = bevicted
	email = BisonsEvicted@email.com

[core]
	editor = nvim
	pager = delta

[interactive]
	diffFilter = delta --color-only

[diff]
	colorMoved = default

[pull]
	rebase = true

[alias]
	smartblame = blame -wCCC

[branch]
	sort = -committerdate

[merge]
	conflictStyle = zdiff3

[delta]
	navigate = true    # use n and N to move between diff sections
	side-by-side = true
	paging = always

	dark = true
	line-numbers = true

